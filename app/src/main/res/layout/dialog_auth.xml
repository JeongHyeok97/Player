<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/default_background"
        >
        <TextView
            android:id="@+id/parental_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/parental_input_text"
            app:layout_constraintEnd_toEndOf="@id/parental_input_text"
            app:layout_constraintBottom_toTopOf="@id/parental_input_text"

            android:textSize="24sp"
            android:text="@string/parental_title"
            android:paddingStart="10dp"
            android:paddingVertical="20dp"
            android:fontFamily="sans-serif-medium"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/parental_input_text"
            android:layout_width="400dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="10dp"
            android:gravity="center_vertical"
            android:hint="@string/parental_hint"
            android:inputType = "textPassword"
            android:letterSpacing="0.7"
            android:maxLength="4"
            android:textSize="32sp"
            tools:text = "1234"
            tools:ignore="RtlSymmetry" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>