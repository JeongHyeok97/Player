<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item android:state_focused = "true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#00e9194d"
                android:endColor="#99FF297E"
                android:angle="270" />
            <corners
                android:radius="5dp"/>
        </shape>
    </item>
    <item android:state_selected = "true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#00e9194d"
                android:endColor="#99FF297E"
                android:angle="270" />
            <corners
                android:radius="5dp"/>
        </shape>
    </item>


    <item>
        <shape android:shape="rectangle"
            >
            <corners
                android:radius="10dp"
                />
            <solid android:color = "#00ffffff"/>

        </shape>
    </item>
</selector>