<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    >
    <item>
        <shape
            android:shape="rectangle"
        >
        <gradient
            android:type="linear"
            android:startColor="#BF000000"
            android:endColor="#26000000"
            android:angle="0" />
        </shape>
    </item>


    <item
        android:left="-2dp"
    android:right="-2dp"
    android:top="-2dp"
    android:bottom="1dp">
    <shape android:shape="rectangle">
        <stroke
            android:width="1dp"
        android:color="#80FFFFFF" />
    </shape>
</item>

</layer-list>